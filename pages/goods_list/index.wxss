/* pages/goods_list/index.wxss */

.nav {
  background-color: #eb4450;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.inp {
  background-color: #fff;
  text-align: center;
  height: 80rpx;
  width: 700rpx;
  font-size: 32rpx;
  color: #767676;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  color: #3d3d3d;
  font-size: 30rpx;
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
 
}
.title view{
 position: relative;
}

.active:after {
  content: '';
  position: absolute;
  bottom: 0rpx;
  left: 30rpx;
  height: 3rpx;
  width: 184rpx;
  background-color: #e4262d;
  
}

.col-100 {
  flex: 0 0 100%;
}

.col-50 {
  flex: 0 0 50%;
}

.col-30 {
  flex: 0 0 33.33%;
}

.col-25 {
  flex: 0 0 25%;
}

.col-20 {
  flex: 0 0 20%;
}
